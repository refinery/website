<%= form_for [refinery, :banners_admin, @banner] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @banner,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :picture -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :picture_id,
               :image => @banner.picture,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :caption -%>
    <%= f.text_field :caption -%>
  </div>

  <div class='field'>
    <%= f.label :link_url -%>
    <%= f.text_field :link_url -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.banners.admin.banners.banner'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @banner.title) -%>
<% end -%>
